<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{ISO8601} %d{Z}] [%5level] [%-50.50logger] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.spdiframework" level="DEBUG" />

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="console" />
    </root>

</configuration>